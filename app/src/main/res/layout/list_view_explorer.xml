<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/line_small"
    android:weightSum="30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_num_likes"
            android:background="@drawable/likes"
            android:text="@string/zero"
            android:textColor="#ffffff"
            android:textSize="@dimen/likes_view_size"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_list_name"
            android:textColor="#272c3b"
            android:textSize="@dimen/name_list_size"
            android:text="@string/list_name"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_weight="28"/>

            <Button
                android:layout_width="@dimen/add_button_width"
                android:layout_height="@dimen/add_button_height"
                android:id="@+id/b_add_to_my_lists"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/add_small"
                android:layout_weight="1"/>

</LinearLayout>
